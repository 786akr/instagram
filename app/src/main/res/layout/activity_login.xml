<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/loginpage_gradient">



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="307dp"
            android:layout_height="133dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/insta" />

        <EditText
            android:id="@+id/btnEmailLoginActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:foregroundGravity="center"
            android:hint="            Enter Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/btnPasswordLoginActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="        Enter  Password"
        android:inputType="textPassword"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEmailLoginActivity" />

    <Button
        android:id="@+id/btnSignUpLoginActivity"
        android:layout_width="298dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorAccent"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginLoginActivity" />

    <Button
        android:id="@+id/btnLoginLoginActivity"
        android:layout_width="298dp"
        android:layout_height="52dp"
        android:layout_marginTop="40dp"
        android:background="@color/RoyalBlue"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPasswordLoginActivity" />
    </androidx.constraintlayout.widget.ConstraintLayout>
